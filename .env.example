# Server
PORT=3000
APP_PORT=3000
APP_TIMEOUT_MS=10000
APP_GLOBAL_PREFIX=api
APP_DOCS_PATH=api/docs
# CORS
# - If you use cookies/credentials, do NOT use "*" (browsers will block it).
# - Default `CORS_CREDENTIALS=false` works with JWT Authorization headers.
# Examples:
# CORS_ORIGIN=http://localhost:5173,http://127.0.0.1:5173
# CORS_ORIGIN=*
CORS_ORIGIN=*
CORS_CREDENTIALS=false
NODE_ENV=development
TIMEZONE=Africa/Douala

# Database
MONGODB_URI=mongodb://localhost:27017/lrc-jeuness

# Auth / Security
JWT_SECRET=replace-with-strong-secret
JWT_ACCESS_SECRET=replace-with-strong-access-secret
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret
ACTION_TOKEN_SECRET=replace-with-strong-action-token-secret
# Auth mode:
# - magic_link: default (email a link, then exchange token)
# - direct_email: insecure (email-only login, no verification)
AUTH_MODE=magic_link
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Email (default notification provider)
NOTIFICATION_PROVIDER=email
# Fallback provider when WhatsApp is primary and unavailable: email|none
NOTIFICATION_FALLBACK_PROVIDER=email

# Development (MailDev)
# - MAIL_HOST=localhost
# - MAIL_PORT=1025
# - MAIL_SECURE=false
# - MAIL_REQUIRE_TLS=false
# Production (real SMTP provider)
# Example (Gmail App Password):
# - MAIL_HOST=smtp.gmail.com
# - MAIL_PORT=465
# - MAIL_SECURE=true
# - MAIL_USER=your@gmail.com
# - MAIL_PASS=your-app-password
# - MAIL_FROM="LRC Jeunesse <your@gmail.com>"
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_SECURE=false
MAIL_REQUIRE_TLS=false
MAIL_TLS_REJECT_UNAUTHORIZED=true
MAIL_USER=
MAIL_PASS=
MAIL_FROM="LRC Jeunesse <no-reply@lrc-jeunesse.local>"

# WhatsApp (switch provider to whatsapp when ready)
# NOTIFICATION_PROVIDER=whatsapp
# WHATSAPP_ENABLED=true
# WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
# WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
# WHATSAPP_ACCESS_TOKEN=your-access-token
# WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# WhatsApp (Meta Cloud API)
WHATSAPP_ENABLED=false
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-webhook-verify-token

# In-app notifications (WebSocket)
IN_APP_NOTIFICATIONS_ENABLED=true

# Storage (profile images)
STORAGE_PROVIDER=local
STORAGE_BASE_URL=http://localhost:3000/uploads
STORAGE_BUCKET=profile-images
UPLOADS_DIR=uploads

# Public URLs
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api
FRONTEND_BASE_URL=http://localhost:5173

# Seed (development)
# Example:
# SEED_SUPER_MONITORS_JSON=[{"fullName":"Admin Douala","email":"admin.douala@example.com","homeTown":"Douala","preferredLanguage":"en"}]
SEED_SUPER_MONITORS_JSON=

# Cloudinary (production storage provider)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Localization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr

# Other
LOG_LEVEL=info
